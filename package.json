{
  "name": "data-flooder",
  "description": "A program used to flood data to phishing sites",
  "author": {
    "name": "Samer Ziade",
    "url": "https://samer.io"
  },
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samerziade/phishing-flooder.git"
  },
  "main": "app.ts",
  "scripts": {
    "start": "ts-node app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc --outDir ./build/ app.ts",
    "docker": "npm install --quiet --no-optional --no-shrinkwrap --no-package-lock && npm start --silent"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/node": "10.7.1",
    "jest": "23.5.0",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "typescript": "3.0.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "tabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript",
    "requirePragma": false,
    "useTabs": false
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  }
}
