{
  "name": "phishing-flooder",
  "description": "A program used to flood data to phishing sites",
  "author": {
    "name": "Samer Ziade",
    "url": "https://samer.io"
  },
  "version": "1.3.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samerziade/phishing-flooder.git"
  },
  "main": "src/app.ts",
  "scripts": {
    "start": "APP_CONFIG_FILE=../app.config.json ts-node src/app.ts",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "build": "npm run build:clean && npm run build:app",
    "build:clean": "rm -rf ./docker/app/build",
    "build:app": "tsc --lib ES2015 --outDir ./docker/app/build/ src/app.ts"
  },
  "devDependencies": {
    "@types/jest": "23.3.2",
    "@types/node": "10.9.4",
    "@types/z-schema": "3.16.32",
    "jest": "23.6.0",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "typescript": "3.0.3",
    "z-schema": "3.23.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "tabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript",
    "requirePragma": false,
    "useTabs": false
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
