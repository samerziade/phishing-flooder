{
  "name": "data-flooder",
  "description": "A program used to flood data to phishing sites",
  "author": {
    "name": "Samer Ziade",
    "url": "https://samer.io"
  },
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samerziade/respammer.git"
  },
  "main": "app.ts",
  "scripts": {
    "start": "./node_modules/.bin/ts-node app.ts",
    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watch",
    "eslint:init": "./node_modules/.bin/eslint --init",
    "docker": "npm install --quiet --no-optional --no-shrinkwrap --no-package-lock && npm start --silent"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/node": "10.5.6",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.13.0",
    "jest": "^23.4.2",
    "ts-jest": "23.1.3",
    "ts-node": "7.0.0",
    "typescript": "3.0.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "tabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript",
    "requirePragma": false,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  }
}